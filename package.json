{
  "name": "programming-helpdesk",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "eslint-config-airbnb": "^16.1.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-scripts": "1.1.1"
  },
  "main": "src/electron-starter.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "dev": "nf start",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=src/images/helpdesk.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . programming-helpdesk --overwrite --asar=true --platform=win32 --arch=ia32 --icon=src/images/react.icns --prune=true --out=release-builds --version-string.CompanyName=Swin --version-string.FileDescription=Swin --version-string.ProductName=\"Programming Helpdesk\"",    
    "package-linux": "electron-packager . programming-helpdesk --overwrite --asar=true --platform=linux --arch=x64 --icon=src/images/react.icns --prune=true --out=release-builds"
  },
  "devDependencies": {
    "electron": "^1.8.2",
    "electron-packager": "^11.0.1",
    "foreman": "^2.0.0"
  }
}
